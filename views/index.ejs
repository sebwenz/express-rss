<html>

<head>
    <title> expresss-rss-reader </title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="css/bootstrap.min.css" />
</head>

<body>
    <div class="header">
        <div class="float-btn">
            <button class="btn btn-success" onclick="openForm()">+</button>
        </div>
        <div class="form-popup" id="myForm">
            <form method="post" action="/addFeed" class="form-container">
                <h1>Add RSS-Feed</h1>

                <label for="email"><b>RSS-Feed URL</b></label>
                <input type="text" placeholder="enter URL here" name="rssfeedlink" required>

                <label for="feedName"><b>Feed-Name</b></label>
                <input type="text" placeholder="Enter name" name="feedName" required>

                <button type="submit" class="btn">Add</button>
                <button type="button" class="btn cancel" onclick="closeForm()">Cancel</button>
            </form>
        </div>
        <form method="post" action="/feedOverview">
            <input type="submit" value="Overview" class="btn btn-secondary">
        </form>
    </div>
    <%rss.forEach(item => {%>
    <div class="jumbotron">
        <h1 class='display-4'>
            <%- item.title%>
        </h1>
        <hr class="my-4">
        <% if (item.enclosures) { %>
        <div class="article-picture">
            <img src="<%- item.enclosures[0].url%>" alt="">
        </div>
        <%} %>
        <p class='lead'>
            <%- item.description%>
        </p>
        <a href="<%- item.link%>">
            Read full article
        </a>

    </div>
    <%});%>
</body>

<script>
    function openForm() {
        document.getElementById("myForm").style.display = "block";
    }

    function closeForm() {
        document.getElementById("myForm").style.display = "none";
    }
</script>

</html>