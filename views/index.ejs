<html>

<head>
    <title> expresss-rss-reader </title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="css/bootstrap.min.css" />
</head>

<body>
    <div class ="header">
        <form method="post" action="/addFeed">
            <input type="text" name="rssfeedlink" value="hier Link einfügen" class="input-text">
            <input type="text" name="feedName" value="hier Name einfügen" class="input-text">
            <input type="submit" value="Submit">
        </form>
        <form method="post" action="/feedOverview">
            <input type="submit" value="Overview">
        </form>
    </div>
    <%rss.forEach(item => {%>
    <div class="jumbotron">
        <h1 class='display-4'>
            <%- item.title%>
        </h1>
        <hr class="my-4">
        <% if (item.enclosures) { %>
        <div class="article-picture">
            <img src="<%- item.enclosures[0].url%>" alt="">
        </div>
        <%} %>
        <p class='lead'>
            <%- item.description%>
        </p>
        <a href="<%- item.link%>">
            Read full article
        </a>

    </div>
    <%});%>
</body>

</html>